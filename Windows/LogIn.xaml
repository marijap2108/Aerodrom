<Window x:Class="Aerodrom.Windows.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aerodrom.Windows"
        mc:Ignorable="d"
        Title="LogIn" Height="400" Width="400" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF23242A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="1" Grid.Column="1" x:Name="_NavigationFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button x:Name="Button" Grid.Row="1" Grid.Column="1" Content="Sing Up" Width="100" VerticalAlignment="Bottom" Height="30" Margin="0,0,0,30" Click="Button_Click" Foreground="#FF1C8E95" FontWeight="Bold" FontSize="14" Background="#FFB4B42F" BorderBrush="#FFB4B42F" />
    </Grid>
</Window>
