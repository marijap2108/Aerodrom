<Page x:Class="Aerodrom.Pages.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aerodrom.Pages"
      mc:Ignorable="d" 
      Title="SignIn" KeyDown="Page_KeyDown">

    <Grid>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" >
            <Label Content="Sing In" FontSize="24" Margin="0,0,0,20" Foreground="#FF1C8E95"/>
            <Label Content="Email" Margin="0,0,0,5" Foreground="#FFC7C7C7"/>
            <TextBox x:Name="Email" Width="200" KeyDown="Email_KeyDown" BorderBrush="#FFC7C7C7" />
            <Label x:Name="EmailError" Foreground="Red" Height="22" FontSize="9" />
            <Label Content="Password" Foreground="#FFC7C7C7" />
            <PasswordBox x:Name="Password" Width="200" KeyDown="Password_KeyDown" PasswordChar="*" BorderBrush="#FFC7C7C7" />
            <Label x:Name="PasswordError" Foreground="Red" Height="22" FontSize="8" />
            <Button x:Name="SingIn" Content="Sing In" Margin="0,20" Width="150" Click="SingIn_Click" Foreground="#FF1C8E95" FontWeight="Bold" Background="#FFB4B42F" />
        </StackPanel>
    </Grid>
</Page>
